---
// @ts-nocheck
import Section from "../Section.astro"

import { languages } from "@cv"
---

<Section title="Lenguajes">
  <ul>
    {
      languages.map(({ language, fluency,certificate }) => {
        

        return (
          <li>
            <article>
              <header>
                  <h3>{language}</h3>
              </header>

              <footer>
                <p>{fluency}</p>
                {certificate && <a href={certificate.url} title={`Ver ${certificate.title}`} target="_blank">
                        {certificate.title}
                      </a>}
              </footer>
            </article>
          </li>
        )
      })
    }
  </ul>
</Section>

<style>
  ul {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  article h3 {
    font-weight: 500;
    color: #111;
  }
  article a {
    color: #666;
    font-size: .9rem;
  }

  article a:hover {
    text-decoration: underline;
  }
  header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 4px;
  }

  }
</style>
